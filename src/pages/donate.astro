---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Living Homeless | Learn about homelessness through lived experiences';
const description = 'Learn how to live homeless with Lisa and Andrew.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
    <div class="flex flex-1 items-center justify-center my-16">
        
          <h2 class="font-bold mb-10">Donations can be made to <hr />
          $lisaweisbeck4 via CashApp<hr />
          </h2>
          <h4>We are currently working on this page and more ways to donate will be available soon - we thank you
          for your help and you will receive a receipt via email per your request to freestackdeveloper@gmail.com
          for tax and record collection purposes
          </h4>
        
    </div>
</BaseLayout>